     <% for(var i=0; i<books.length; i++) {%>  
      <tr>
        <td><%=books[i].title%></td>
        <td><%=books[i].author%></td>
        <td><%=books[i].genre%></td>
        <td><span class="badge">Edit</span></td>
        <td><span class="badge hand dele" data-source="book" data-id="<%=books[i]._id%>">Delete</span></td>
